@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details of @Model.RoleName</h1>

<form>
    <div class="form-group">
        <label asp-for="Id" class="form-label">Id</label>
        <input readonly class="form-control" asp-for="Id">
    </div>
    <div class="form-group">
        <label asp-for="RoleName" class="form-label">Role Name</label>
        <input readonly class="form-control" asp-for="RoleName">
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>