@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.RoleName Role</h1>
<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Id" class="form-label">Id</label>
        <input readonly class="form-control" asp-for="Id">
    </div>
    <div class="form-group">
        <label asp-for="RoleName" class="form-label"> Name</label>
        <input readonly class="form-control" asp-for="RoleName">
    </div>
    <input type="submit" value="Delete" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-light">Cancle</a>
</form>

