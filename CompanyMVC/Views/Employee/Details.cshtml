@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-success"><h1>@ViewData["HelloMessage"]</h1></div>

<body >
    <div class="card align-content-center" style="width:15">
        <img src="~/Files/Images/@Model.ImageName" class="card-img-top rounded " style="width: 18rem;height:12rem;align-content-center;" alt="@Model.ImageName">
        <div class="card-body">

    <div class="form-group">
        <label asp-for="Name" class="form-label"> Name</label>
        <input readonly class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Age" class="form-label">Age</label>
        <input readonly class="form-control" asp-for="Age">
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="form-label">Salary</label>
        <input readonly class="form-control" asp-for="Salary">  
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="form-label">Hire Date</label>
        <input readonly class="form-control" asp-for="HireDate">
    </div>
    <div class="form-group">
        <label asp-for="Address" class="form-label">Address</label>
        <input readonly class="form-control" asp-for="Address">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input readonly class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email</label>
        <input readonly class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Departments" class="form-label">Department</label>
        <input readonly class="form-control" asp-for="Departments.Name">
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-label">Is Active</label>
        @if (Model.IsActive == true)
        {
            <i class="fa-solid fa-circle" style="color:green"></i>
        }
        else{
            <i class="fa-solid fa-circle" style="color:red" ></i>
        }
    </div>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
    <a asp-action="GetAll" class="btn btn-light">Back To List</a>

</body>