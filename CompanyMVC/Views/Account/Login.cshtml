@model LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Login" asp-controller="Account">
	<div class="form-group">
		<input class="form-control" asp-for="@Model.Email" placeholder="Email">
		<span asp-validation-for="@Model.Email"></span>
	</div>
	<div class="form-group">
		<input class="form-control" asp-for="@Model.Password" placeholder="Password">
		<span asp-validation-for="@Model.Password"></span>
	</div>

	<div class="form-group">
		<button type="submit" class="form-control btn btn-primary submit px-3">LogIn</button>
	</div>
	<div class="form-group d-md-flex">
		<div class="w-50">
			<input type="checkbox" asp-for="@Model.RememberMe">
			<span>Remember Me</span>
		</div>
		<div class="w-50 Text-md-flex">
			<p> Don't have an Account? <a asp-action="Register"> SignUp Now!</a></p>
		</div>
		<br />
		<div class="w-50 Text-md-flex">
				
			<p> <a asp-action="ForGetPassword">Forget My Password!! </a></p>
		</div>
	</div>
	<p class="w-100 text-center">&mdash; Or Login In With &mdash;</p>
	<div class="social d-flex text-center">
		<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
		<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
	</div>
</form>
@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}


