@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div>
	<div asp-validation-summary="All"></div>
</div>
<form asp-action="Register" asp-controller="Account"  >
	<div class="form-group">
			<input class="form-control" asp-for="@Model.FName" placeholder="Your First name">
			<span asp-validation-for="@Model.FName"></span>
		</div>
		<div class="form-group">
			<input class="form-control" asp-for="@Model.LName" placeholder="Your Last name">
			<span asp-validation-for="@Model.LName"></span>
		</div>
		<div class="form-group">
			<input class="form-control" asp-for="@Model.Email" placeholder="Email">
			<span asp-validation-for="@Model.Email"></span>
		</div>
		<div class="form-group">
			<input class="form-control" asp-for="@Model.Password" placeholder="Password">
			<span asp-validation-for="@Model.Password"></span>
		</div>
		<div class="form-group">
			<input class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password">
			<span asp-validation-for="@Model.ConfirmPassword" text="color:red" ></span>
		</div>

		<div class="form-group">
			<button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
		</div>
		<div class="form-group d-md-flex">
			<div class="w-50">
				<input type="checkbox" asp-for="IsAgree" >
				<span>Agree With Terms & Conditions</span>
		</div>
		<div class="form-group d-md-flex">
		 <span><a asp-action="Login" style="color: #fff"> AllReady Have Account</a></span>
		</div>
		</div>
		<br/>
		<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
		<div class="social d-flex text-center">
			<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
			<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
		</div>
	</form>
@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}

