@using DAL.Models
@model IEnumerable<Department>
@{
    ViewData["Title"] = "GetAllDepartments";
}
@if (@TempData["Added"] is not null)
{
    <div class="alert alert-success"><h3>@TempData["Added"]</h3></div>
}

<a class="btn btn-success" asp-action="AddNewDepartment"> Add New Department</a>
@if(Model.Count() > 0)
{
    <h1><center><strong>All Departments</strong></center></h1>
    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x=>x.Code)</th>
                <th scope="col">@Html.DisplayNameFor(x=>x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x=>x.CreateAt)</th>
                <th scope="col">Edit</th>
                <th scope="col">Details</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                <th scope="row">@item.Code</th>
                <td>@item.Name</td>
                <td>@item.CreateAt</td>
                <partial name="_ButtonsPartialView" model="@item.ID.ToString()"/>    
            </tr>     
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning alert">
        <h1>No Departments Added</h1>
    </div>
}

